<% content_for :page_title, "Dashboard" %>
<% content_for :page_description, "Track your time and productivity" %>

<!-- Quick stats -->
<div class="mb-8">
  <div class="grid grid-cols-1 gap-4 sm:gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
          <%= icon :clock, size: 6, class: "text-blue-600" %>
        </div>
        <div class="ml-5 flex-1">
          <p class="text-sm font-medium text-gray-600">Active Timers</p>
          <p class="mt-1 text-3xl font-bold text-gray-900"><%= @active_timers.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 bg-gradient-to-br from-green-50 to-green-100 rounded-lg">
          <%= icon :chart, size: 6, class: "text-green-600" %>
        </div>
        <div class="ml-5 flex-1">
          <p class="text-sm font-medium text-gray-600">Total Timers</p>
          <p class="mt-1 text-3xl font-bold text-gray-900"><%= @timer_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200 sm:col-span-2 lg:col-span-1">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg">
          <%= icon :lightning, size: 6, class: "text-purple-600" %>
        </div>
        <div class="ml-5 flex-1">
          <p class="text-sm font-medium text-gray-600">Today's Time</p>
          <p class="mt-1 text-3xl font-bold text-gray-900">
            <% if @total_time_today > 0 %>
              <% hours = @total_time_today / 3600 %>
              <% minutes = (@total_time_today % 3600) / 60 %>
              <%= "#{hours}h #{minutes}m" %>
            <% else %>
              0h 0m
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quick actions -->
<div class="mb-8">
  <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-6 text-white">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h2 class="text-xl font-semibold">Quick Actions</h2>
        <p class="mt-1 text-blue-100">Start a new timer or view your analytics</p>
      </div>
      <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row gap-3">
        <%= link_to new_timer_path, class: "inline-flex items-center justify-center px-4 py-2 bg-white text-blue-600 font-medium rounded-lg shadow-sm hover:shadow-md transition-all duration-150" do %>
          <%= icon_with_text :plus, "New Timer", icon: { size: 4 } %>
        <% end %>
        <%= link_to timers_path, class: "inline-flex items-center justify-center px-4 py-2 bg-blue-500 bg-opacity-50 text-white font-medium rounded-lg hover:bg-opacity-70 transition-all duration-150" do %>
          <%= icon_with_text :calendar, "All Timers", icon: { size: 4 } %>
        <% end %>
        <%= link_to analytics_path, class: "inline-flex items-center justify-center px-4 py-2 bg-blue-500 bg-opacity-50 text-white font-medium rounded-lg hover:bg-opacity-70 transition-all duration-150" do %>
          <%= icon_with_text :chart, "Analytics", icon: { size: 4 } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Active timers -->
<% if @active_timers.any? %>
  <div class="mb-8">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="px-6 py-4 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Active Timers</h2>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <%= icon :clock, size: 3, class: "mr-1" %>
            <%= @active_timers.count %> running
          </span>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% @active_timers.each do |timer| %>
          <div class="p-6 hover:bg-gray-50 transition-colors duration-150" 
               data-timer-id="<%= timer.id %>" 
               data-timer-status="<%= timer.status %>" 
               data-timer-start-time="<%= timer.start_time&.iso8601 %>">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <h3 class="text-base font-medium text-gray-900 truncate">
                  <%= timer.task_name %>
                </h3>
                <div class="mt-2 flex items-center gap-4">
                  <span class="timer-display text-2xl text-blue-600 <%= 'animate-pulse-subtle' if timer.running? %>">
                    <%= timer.formatted_duration %>
                  </span>
                  <% if timer.running? %>
                    <span class="badge-success">Running</span>
                  <% elsif timer.paused? %>
                    <span class="badge-warning">Paused</span>
                  <% end %>
                </div>
              </div>
              <div class="ml-4 flex items-center gap-2">
                <% if timer.running? %>
                  <%= button_to pause_timer_path(timer), 
                      method: :patch, 
                      class: "btn-warning btn-sm",
                      data: { timer_action: "pause", timer_id: timer.id } do %>
                    <%= icon_with_text :pause, "Pause", icon: { size: 4 } %>
                  <% end %>
                <% elsif timer.paused? %>
                  <%= button_to resume_timer_path(timer), 
                      method: :patch, 
                      class: "btn-success btn-sm",
                      data: { timer_action: "resume", timer_id: timer.id } do %>
                    <%= icon_with_text :play, "Resume", icon: { size: 4 } %>
                  <% end %>
                <% end %>
                <%= button_to stop_timer_path(timer), 
                    method: :patch, 
                    class: "btn-danger btn-sm",
                    data: { timer_action: "stop", timer_id: timer.id } do %>
                  <%= icon_with_text :stop, "Stop", icon: { size: 4 } %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Recent timers -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100">
  <div class="px-6 py-4 border-b border-gray-100">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Recent Activity</h2>
      <% if @recent_timers.any? %>
        <%= link_to timers_path, class: "text-sm font-medium text-blue-600 hover:text-blue-700 transition-colors" do %>
          View all â†’
        <% end %>
      <% end %>
    </div>
  </div>
  
  <% if @recent_timers.any? %>
    <div class="divide-y divide-gray-200">
      <% @recent_timers.each do |timer| %>
        <div class="p-6 hover:bg-gray-50 transition-colors duration-150">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="text-sm font-medium text-gray-900 truncate">
                <%= timer.task_name %>
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                Completed <%= time_ago_in_words(timer.updated_at) %> ago
              </p>
            </div>
            <div class="ml-4 text-right">
              <div class="text-sm font-medium text-gray-900">
                <%= timer.formatted_duration %>
              </div>
              <div class="text-xs text-gray-500">
                <%= timer.created_at.strftime("%b %d, %Y") %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 text-center">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-gray-50 to-gray-100 rounded-full mb-4">
        <%= icon :clock, size: 10, class: "text-gray-400" %>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No timers yet</h3>
      <p class="text-gray-600 mb-8 max-w-sm mx-auto">
        Create your first timer to start tracking your productivity and see your progress here.
      </p>
      <%= link_to new_timer_path, class: "inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-sm hover:bg-blue-700 hover:shadow-md transition-all duration-150" do %>
        <%= icon_with_text :plus, "Create First Timer", icon: { size: 4 } %>
      <% end %>
    </div>
  <% end %>
</div>