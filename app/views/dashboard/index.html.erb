<% content_for :page_title, "Dashboard" %>
<% content_for :page_description, "Track your time and productivity" %>

<!-- Quick stats -->
<div class="mb-8">
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="text-2xl">‚è±Ô∏è</div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Active Timers</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @active_timers.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="text-2xl">üìà</div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Timers</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @timer_count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="text-2xl">üéØ</div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Today's Time</dt>
              <dd class="text-lg font-medium text-gray-900">
                <% if @total_time_today > 0 %>
                  <% hours = @total_time_today / 3600 %>
                  <% minutes = (@total_time_today % 3600) / 60 %>
                  <%= "#{hours}h #{minutes}m" if hours > 0 || minutes > 0 %>
                <% else %>
                  0h 0m
                <% end %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quick actions -->
<div class="mb-8">
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h2>
    <div class="flex flex-col sm:flex-row gap-3">
      <%= link_to new_timer_path, class: "btn-primary" do %>
        ‚ûï New Timer
      <% end %>
      <%= link_to timers_path, class: "btn-secondary" do %>
        üìÖ View All Timers
      <% end %>
    </div>
  </div>
</div>

<!-- Active timers -->
<% if @active_timers.any? %>
  <div class="mb-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Active Timers</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @active_timers.each do |timer| %>
          <div class="p-6" data-timer-id="<%= timer.id %>" data-timer-status="<%= timer.status %>" data-timer-start-time="<%= timer.start_time&.iso8601 %>">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <h3 class="text-sm font-medium text-gray-900"><%= timer.task_name %></h3>
                <div class="mt-2">
                  <span class="timer-display text-2xl font-mono text-primary-600">
                    <%= timer.formatted_duration %>
                  </span>
                  <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= timer.running? ? 'bg-success-100 text-success-800' : 'bg-warning-100 text-warning-800' %>">
                    <%= timer.status.capitalize %>
                  </span>
                </div>
              </div>
              <div class="flex space-x-2">
                <% if timer.running? %>
                  <%= button_to pause_timer_path(timer), method: :patch, class: "btn-warning btn-sm", 
                      data: { timer_action: "pause", timer_id: timer.id } do %>
                    ‚è∏Ô∏è Pause
                  <% end %>
                <% elsif timer.paused? %>
                  <%= button_to resume_timer_path(timer), method: :patch, class: "btn-success btn-sm",
                      data: { timer_action: "resume", timer_id: timer.id } do %>
                    ‚ñ∂Ô∏è Resume
                  <% end %>
                <% end %>
                <%= button_to stop_timer_path(timer), method: :patch, class: "btn-danger btn-sm",
                    data: { timer_action: "stop", timer_id: timer.id } do %>
                  ‚èπÔ∏è Stop
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Recent timers -->
<% if @recent_timers.any? %>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Recent Completed Timers</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% @recent_timers.each do |timer| %>
        <div class="p-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-sm font-medium text-gray-900"><%= timer.task_name %></h3>
              <p class="text-sm text-gray-500">
                Completed <%= time_ago_in_words(timer.updated_at) %> ago
              </p>
            </div>
            <div class="text-right">
              <div class="text-sm font-medium text-gray-900">
                <%= timer.formatted_duration %>
              </div>
              <div class="text-xs text-gray-500">
                <%= timer.created_at.strftime("%b %d, %Y") %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-3 bg-gray-50 text-center">
      <%= link_to timers_path, class: "text-sm text-primary-600 hover:text-primary-500" do %>
        View all timers ‚Üí
      <% end %>
    </div>
  </div>
<% else %>
  <div class="text-center py-12">
    <div class="text-6xl mb-4">‚è±Ô∏è</div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No timers yet</h3>
    <p class="text-gray-500 mb-6">Create your first timer to start tracking your productivity!</p>
    <%= link_to new_timer_path, class: "btn-primary" do %>
      ‚ûï Create First Timer
    <% end %>
  </div>
<% end %>
