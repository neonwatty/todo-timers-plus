<% content_for :page_title, "Dashboard" %>
<% content_for :page_description, "Track your time and productivity" %>

<!-- Quick stats -->
<div class="mb-8">
  <div class="grid grid-cols-1 gap-4 sm:gap-6 sm:grid-cols-2 md:grid-cols-3">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
          <%= icon :clock, size: 6, class: "text-blue-600" %>
        </div>
        <div class="ml-5 flex-1">
          <p class="text-sm font-medium text-gray-600">Active Timers</p>
          <p class="mt-1 text-3xl font-bold text-gray-900"><%= @active_timers.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 bg-gradient-to-br from-green-50 to-green-100 rounded-lg">
          <%= icon :chart, size: 6, class: "text-green-600" %>
        </div>
        <div class="ml-5 flex-1">
          <p class="text-sm font-medium text-gray-600">Total Timers</p>
          <p class="mt-1 text-3xl font-bold text-gray-900"><%= @timer_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow duration-200">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg">
          <%= icon :lightning, size: 6, class: "text-purple-600" %>
        </div>
        <div class="ml-5 flex-1">
          <p class="text-sm font-medium text-gray-600">Today's Time</p>
          <p class="mt-1 text-3xl font-bold text-gray-900">
            <% if @total_time_today > 0 %>
              <% hours = @total_time_today / 3600 %>
              <% minutes = (@total_time_today % 3600) / 60 %>
              <%= "#{hours}h #{minutes}m" %>
            <% else %>
              0h 0m
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quick actions -->
<div class="mb-8">
  <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-6 text-white">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h2 class="text-xl font-semibold">Quick Actions</h2>
        <p class="mt-1 text-blue-100">Start a new timer or view your analytics</p>
      </div>
      <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row gap-3">
        <%= link_to new_timer_path, class: "btn-primary" do %>
          <%= icon_with_text :plus, "New Timer", icon: { size: 4 } %>
        <% end %>
        <%= link_to timers_path, class: "btn-secondary" do %>
          <%= icon_with_text :calendar, "All Timers", icon: { size: 4 } %>
        <% end %>
        <%= link_to analytics_path, class: "btn-secondary" do %>
          <%= icon_with_text :chart, "Analytics", icon: { size: 4 } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Active timers -->
<% if @active_timers.any? %>
  <div class="mb-8">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100">
      <div class="px-6 py-4 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Active Timers</h2>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <%= icon :clock, size: 3, class: "mr-1" %>
            <%= @active_timers.count %> running
          </span>
        </div>
      </div>
      <div class="divide-y divide-gray-200">
        <% @active_timers.each do |timer| %>
          <%= render 'timers/dashboard_active_timer', timer: timer %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Recent timers -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100">
  <div class="px-6 py-4 border-b border-gray-100">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Recent Activity</h2>
      <% if @recent_timers.any? %>
        <%= link_to timers_path, class: "text-sm font-medium text-blue-600 hover:text-blue-700 transition-colors" do %>
          View all →
        <% end %>
      <% end %>
    </div>
  </div>
  
  <% if @recent_timers.any? %>
    <div class="divide-y divide-gray-200">
      <% @recent_timers.each do |timer| %>
        <div class="p-6 hover:bg-gray-50 transition-colors duration-150"
             data-controller="countdown-timer"
             data-countdown-timer-timer-id-value="<%= timer.id %>"
             data-countdown-timer-status-value="<%= timer.status %>"
             data-countdown-timer-start-time-value="<%= timer.start_time&.iso8601 %>"
             data-countdown-timer-target-duration-value="<%= timer.target_duration || 0 %>"
             data-countdown-timer-remaining-duration-value="<%= timer.calculate_remaining_time %>"
             data-countdown-timer-is-countdown-value="<%= timer.countdown? %>"
             data-countdown-timer-update-url-value="<%= timer_path(timer) %>">
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="text-sm font-medium text-gray-900 truncate">
                <%= timer.task_name %>
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                <% if timer.stopped? || timer.completed? %>
                  <%= timer.countdown? ? 'Ready to start' : 'Stopped' %> • Duration: <%= timer.formatted_duration %>
                <% else %>
                  Status: <%= timer.status.capitalize %> • <%= time_ago_in_words(timer.updated_at) %> ago
                <% end %>
              </p>
            </div>
            <div class="ml-4 flex items-center gap-2">
              <% if timer.stopped? || timer.completed? %>
                <% if timer.countdown? %>
                  <%= button_to reset_timer_path(timer), method: :patch,
                      data: { turbo_method: :patch },
                      class: "btn-primary btn-sm" do %>
                    <%= icon_with_text :refresh, "Reset", icon: { size: 4 } %>
                  <% end %>
                <% else %>
                  <%= button_to start_timer_path(timer), method: :patch,
                      data: { turbo_method: :patch },
                      class: "btn-success btn-sm" do %>
                    <%= icon_with_text :play, "Start", icon: { size: 4 } %>
                  <% end %>
                <% end %>
              <% end %>
              <%= link_to timer, class: "btn-secondary btn-sm" do %>
                <%= icon :chart, size: 4 %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="p-12 text-center">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-gray-50 to-gray-100 rounded-full mb-4">
        <%= icon :clock, size: 10, class: "text-gray-400" %>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No timers yet</h3>
      <p class="text-gray-600 mb-8 max-w-sm mx-auto">
        Create your first timer to start tracking your productivity and see your progress here.
      </p>
      <%= link_to new_timer_path, class: "btn-primary btn-lg" do %>
        <%= icon_with_text :plus, "Create First Timer", icon: { size: 4 } %>
      <% end %>
    </div>
  <% end %>
</div>