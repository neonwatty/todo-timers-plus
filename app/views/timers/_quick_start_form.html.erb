<!-- Quick Start Timer Form -->
<div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl shadow-sm border border-blue-200 p-6 mb-8">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-bold text-gray-900 flex items-center">
      <%= icon :lightning, size: 5, class: "text-blue-600 mr-2" %>
      Quick Start Timer
    </h2>
    <span class="text-sm text-blue-700">Create and configure timers quickly!</span>
  </div>
  
  <%= form_with url: quick_start_timers_path, local: false, class: "space-y-4", data: { controller: "quick-start" } do |form| %>
    <!-- Task Name Input -->
    <div class="flex flex-col sm:flex-row gap-3">
      <div class="flex-1">
        <%= text_field_tag :task_name, nil,
            placeholder: "What are you working on?",
            class: "w-full px-4 py-3 text-base rounded-lg border border-blue-300 bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-colors",
            required: true,
            autocomplete: "off",
            data: { 
              quick_start_target: "taskInput",
              action: "keydown.enter->quick-start#handleEnter"
            } %>
      </div>
    </div>
    
    <!-- Timer Type Selection -->
    <div class="space-y-3">
      <!-- Stopwatch Option -->
      <div class="flex items-center">
        <label class="flex items-center">
          <%= radio_button_tag :timer_type, "stopwatch", true, 
              class: "text-blue-600 focus:ring-blue-500",
              data: { 
                quick_start_target: "stopwatchRadio",
                action: "change->quick-start#toggleTimerType" 
              } %>
          <span class="ml-2 text-sm font-medium text-gray-700">
            <%= icon :clock, size: 4, class: "inline mr-1 text-gray-600" %>
            Stopwatch
          </span>
        </label>
      </div>
      
      <!-- Countdown Option with Presets -->
      <div>
        <div class="flex items-center mb-2">
          <label class="flex items-center">
            <%= radio_button_tag :timer_type, "countdown", false,
                class: "text-blue-600 focus:ring-blue-500",
                data: { 
                  quick_start_target: "countdownRadio",
                  action: "change->quick-start#toggleTimerType" 
                } %>
            <span class="ml-2 text-sm font-medium text-gray-700">
              <%= icon :hourglass, size: 4, class: "inline mr-1 text-gray-600" %>
              Countdown Timer
            </span>
          </label>
        </div>
        
        <!-- Quick Duration Presets -->
        <div class="ml-6 space-y-2 transition-all duration-200" data-quick-start-target="countdownOptions">
          <div class="flex flex-wrap gap-2">
            <button type="button"
                    class="quick-duration-btn px-3 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-blue-50 hover:border-blue-400 transition-colors"
                    data-action="click->quick-start#selectDuration"
                    data-minutes="5">
              5 min
            </button>
            <button type="button"
                    class="quick-duration-btn px-3 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-blue-50 hover:border-blue-400 transition-colors"
                    data-action="click->quick-start#selectDuration"
                    data-minutes="10">
              10 min
            </button>
            <button type="button"
                    class="quick-duration-btn px-3 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-blue-50 hover:border-blue-400 transition-colors"
                    data-action="click->quick-start#selectDuration"
                    data-minutes="15">
              15 min
            </button>
            <button type="button"
                    class="quick-duration-btn px-3 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-blue-50 hover:border-blue-400 transition-colors"
                    data-action="click->quick-start#selectDuration"
                    data-minutes="25">
              25 min
            </button>
            <button type="button"
                    class="quick-duration-btn px-3 py-2 text-sm font-medium bg-white border border-gray-300 rounded-lg hover:bg-blue-50 hover:border-blue-400 transition-colors"
                    data-action="click->quick-start#selectDuration"
                    data-minutes="30">
              30 min
            </button>
            
            <!-- Custom Duration -->
            <div class="flex items-center gap-2">
              <%= number_field_tag :duration_minutes, nil,
                  placeholder: "Custom",
                  class: "w-20 px-2 py-2 text-sm rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500",
                  min: 1,
                  max: 999,
                  data: { 
                    quick_start_target: "customDurationInput",
                    action: "input->quick-start#handleCustomDuration"
                  } %>
              <span class="text-sm text-gray-500">min</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Create Timer Button -->
      <div class="pt-3 border-t border-blue-200">
        <button type="submit" 
                class="btn-primary w-full sm:w-auto px-6 py-3 text-base font-medium flex items-center justify-center"
                data-quick-start-target="submitButton">
          <%= icon :plus, size: 5, class: "mr-2" %>
          Create Timer
        </button>
      </div>
    </div>
    
    <%= hidden_field_tag :timer_type, "stopwatch", data: { quick_start_target: "timerTypeHidden" } %>
    
    <!-- Advanced Options (Hidden by default) -->
    <div class="flex items-center gap-2 pt-2">
      <button type="button"
              class="text-sm text-blue-600 hover:text-blue-700 font-medium flex items-center"
              data-action="click->quick-start#toggleAdvanced"
              data-quick-start-target="advancedToggle">
        <%= icon :chevron_down, size: 4, class: "mr-1 transition-transform", data: { quick_start_target: "advancedIcon" } %>
        Advanced Options
      </button>
    </div>
    
    <div class="hidden border-t border-blue-200 pt-4 space-y-4" data-quick-start-target="advancedOptions">
      <!-- Tags -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Tags <span class="text-gray-500 font-normal">(optional)</span>
        </label>
        <%= text_field_tag :tags, nil,
            placeholder: "e.g., work, project, client",
            class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
      </div>
      
      <!-- Notes -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Notes <span class="text-gray-500 font-normal">(optional)</span>
        </label>
        <%= text_area_tag :notes, nil,
            placeholder: "Add any notes about this timer...",
            rows: 2,
            class: "w-full px-3 py-2 rounded-md border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
      </div>
    </div>
  <% end %>
  
  <!-- Recent Tasks Suggestions -->
  <% recent_tasks = Current.user.timers.select(:task_name).distinct.order(updated_at: :desc).limit(5).pluck(:task_name) %>
  <% if recent_tasks.any? %>
    <div class="mt-4 pt-4 border-t border-blue-200">
      <p class="text-sm text-gray-700 mb-2">Recent tasks:</p>
      <div class="flex flex-wrap gap-2">
        <% recent_tasks.each do |task_name| %>
          <button type="button"
                  class="px-3 py-1 text-sm bg-white hover:bg-blue-50 text-gray-700 rounded-full border border-gray-300 hover:border-blue-400 transition-colors"
                  data-action="click->quick-start#selectRecentTask"
                  data-task-name="<%= task_name %>">
            <%= task_name %>
          </button>
        <% end %>
      </div>
    </div>
  <% end %>
</div>