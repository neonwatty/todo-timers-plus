<% content_for :page_title, "All Timers" %>
<% content_for :page_description, "Manage and track your time entries" %>

<!-- Header actions -->
<div class="mb-8 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Your Timers</h2>
      <p class="mt-1 text-gray-600">You have <%= @timers.count %> <%= 'timer'.pluralize(@timers.count) %> in total</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_timer_path, class: "btn-primary" do %>
        <%= icon_with_text :plus, "New Timer", icon: { size: 4 } %>
      <% end %>
    </div>
  </div>
</div>

<!-- Active timers section -->
<% if @active_timers.any? %>
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-semibold text-gray-900 flex items-center">
        <%= icon :play, size: 6, class: "text-green-600 mr-2" %>
        Active Timers
      </h3>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
        <%= @active_timers.count %> <%= 'timer'.pluralize(@active_timers.count) %>
      </span>
    </div>
    <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
      <% @active_timers.each do |timer| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-all duration-200" 
             data-controller="countdown-timer"
             data-countdown-timer-timer-id-value="<%= timer.id %>"
             data-countdown-timer-status-value="<%= timer.status %>"
             data-countdown-timer-start-time-value="<%= timer.start_time&.iso8601 %>"
             data-countdown-timer-target-duration-value="<%= timer.target_duration || 0 %>"
             data-countdown-timer-remaining-duration-value="<%= timer.calculate_remaining_time %>"
             data-countdown-timer-is-countdown-value="<%= timer.countdown? %>"
             data-countdown-timer-update-url-value="<%= timer_path(timer) %>">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <h4 class="text-lg font-semibold text-gray-900 mb-2"><%= timer.task_name %></h4>
              <div class="text-3xl font-mono font-bold <%= timer.expired? ? 'text-red-600' : 'text-blue-600' %> mb-3 <%= 'animate-pulse-subtle' if timer.running? %>"
                   data-countdown-timer-target="display">
                <%= timer.formatted_duration %>
              </div>
              <% if timer.countdown? && timer.target_duration.present? %>
                <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
                  <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                       data-countdown-timer-target="progressBar"
                       style="width: <%= timer.progress_percentage %>%"></div>
                </div>
              <% end %>
              <div class="flex items-center space-x-3">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                  <%= timer.running? ? 'bg-green-100 text-green-800' : (timer.expired? ? 'bg-red-100 text-red-800' : 'bg-amber-100 text-amber-800') %>">
                  <%= icon(timer.running? ? :play : (timer.expired? ? :exclamation : :pause), size: 3, class: "mr-1") %>
                  <%= timer.expired? ? 'Expired' : timer.status.capitalize %>
                </span>
                <span class="text-sm text-gray-500">
                  <% if timer.countdown? %>
                    <%= timer.expired? ? 'Expired' : "#{timer.calculate_remaining_time / 60} minutes remaining" %>
                  <% else %>
                    Started <%= time_ago_in_words(timer.start_time) %> ago
                  <% end %>
                </span>
              </div>
            </div>
          </div>
          
          <div class="mt-4 flex space-x-2">
            <% if timer.running? %>
              <%= button_to pause_timer_path(timer), method: :patch, class: "btn-warning btn-sm flex-1",
                  data: { timer_action: "pause", timer_id: timer.id } do %>
                <%= icon_with_text :pause, "Pause", icon: { size: 4 } %>
              <% end %>
            <% elsif timer.paused? %>
              <%= button_to resume_timer_path(timer), method: :patch, class: "btn-success btn-sm flex-1",
                  data: { timer_action: "resume", timer_id: timer.id } do %>
                <%= icon_with_text :play, "Resume", icon: { size: 4 } %>
              <% end %>
            <% elsif timer.expired? %>
              <%= button_to reset_timer_path(timer), method: :patch, class: "btn-primary btn-sm flex-1",
                  data: { timer_action: "reset", timer_id: timer.id } do %>
                <%= icon_with_text :refresh, "Reset", icon: { size: 4 } %>
              <% end %>
            <% end %>
            <%= button_to stop_timer_path(timer), method: :patch, class: "btn-danger btn-sm flex-1",
                data: { timer_action: "stop", timer_id: timer.id } do %>
              <%= icon_with_text :stop, "Stop", icon: { size: 4 } %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- All timers list -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100">
  <div class="px-6 py-4 border-b border-gray-100">
    <h3 class="text-xl font-semibold text-gray-900">All Timers</h3>
  </div>
  
  <% if @timers.any? %>
    <div class="divide-y divide-gray-200">
      <% @timers.each do |timer| %>
        <div class="p-6 hover:bg-gray-50 transition-colors duration-150"
             data-controller="countdown-timer"
             data-countdown-timer-timer-id-value="<%= timer.id %>"
             data-countdown-timer-status-value="<%= timer.status %>"
             data-countdown-timer-start-time-value="<%= timer.start_time&.iso8601 %>"
             data-countdown-timer-target-duration-value="<%= timer.target_duration || 0 %>"
             data-countdown-timer-remaining-duration-value="<%= timer.calculate_remaining_time %>"
             data-countdown-timer-is-countdown-value="<%= timer.countdown? %>"
             data-countdown-timer-update-url-value="<%= timer_path(timer) %>">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3">
                <%= link_to timer_path(timer), class: "text-lg font-medium text-gray-900 hover:text-blue-600 transition-colors" do %>
                  <%= timer.task_name %>
                <% end %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case timer.status
                      when 'running' then 'bg-green-100 text-green-800'
                      when 'paused' then 'bg-amber-100 text-amber-800'
                      when 'stopped', 'completed' then 'bg-gray-100 text-gray-800'
                      when 'expired' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= icon(timer.status == 'running' ? :play : (timer.status == 'paused' ? :pause : (timer.expired? ? :exclamation : :check)), size: 3, class: "mr-1") %>
                  <%= timer.expired? ? 'Expired' : timer.status.capitalize %>
                </span>
                <% if timer.countdown? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= icon :hourglass, size: 3, class: "mr-1" %>
                    Countdown
                  </span>
                <% end %>
              </div>
              
              <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                <span class="font-mono font-medium <%= timer.expired? ? 'text-red-600' : 'text-gray-900' %>"
                      data-countdown-timer-target="display">
                  <%= timer.formatted_duration %>
                </span>
                <% if timer.countdown? && timer.target_duration.present? %>
                  <span>
                    Target: <%= Timer.format_seconds(timer.target_duration) %>
                  </span>
                <% end %>
                <span>
                  Created <%= time_ago_in_words(timer.created_at) %> ago
                </span>
                <% if timer.start_time %>
                  <span>
                    Started <%= timer.start_time.strftime("%b %d, %Y at %I:%M %p") %>
                  </span>
                <% end %>
              </div>
            </div>
            
            <div class="flex items-center space-x-2">
              <% unless timer.status.in?(['stopped', 'completed']) %>
                <% if timer.running? %>
                  <%= button_to pause_timer_path(timer), method: :patch, class: "btn-warning btn-sm",
                      data: { timer_action: "pause", timer_id: timer.id } do %>
                    <%= icon :pause, size: 4 %>
                  <% end %>
                <% elsif timer.paused? %>
                  <%= button_to resume_timer_path(timer), method: :patch, class: "btn-success btn-sm",
                      data: { timer_action: "resume", timer_id: timer.id } do %>
                    <%= icon :play, size: 4 %>
                  <% end %>
                <% elsif timer.expired? %>
                  <%= button_to reset_timer_path(timer), method: :patch, class: "btn-primary btn-sm",
                      data: { timer_action: "reset", timer_id: timer.id } do %>
                    <%= icon :refresh, size: 4 %>
                  <% end %>
                <% end %>
                <%= button_to stop_timer_path(timer), method: :patch, class: "btn-danger btn-sm",
                    data: { timer_action: "stop", timer_id: timer.id } do %>
                  <%= icon :stop, size: 4 %>
                <% end %>
              <% else %>
                <% if timer.countdown? %>
                  <%= button_to reset_timer_path(timer), method: :patch, class: "btn-primary btn-sm",
                      data: { timer_action: "reset", timer_id: timer.id } do %>
                    <%= icon_with_text :refresh, "Reset", icon: { size: 4 } %>
                  <% end %>
                <% else %>
                  <%= button_to start_timer_path(timer), method: :patch, class: "btn-success btn-sm",
                      data: { timer_action: "start", timer_id: timer.id } do %>
                    <%= icon_with_text :play, "Start", icon: { size: 4 } %>
                  <% end %>
                <% end %>
              <% end %>
              
              <%= link_to edit_timer_path(timer), class: "btn-secondary btn-sm" do %>
                <%= icon :edit, size: 4 %>
              <% end %>
              
              <%= button_to timer_path(timer), method: :delete, class: "btn-danger btn-sm",
                  data: { confirm: "Are you sure you want to delete this timer?" } do %>
                <%= icon :trash, size: 4 %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-gray-50 to-gray-100 rounded-full mb-6">
        <%= icon :clock, size: 12, class: "text-gray-400" %>
      </div>
      <h3 class="text-2xl font-semibold text-gray-900 mb-3">No timers yet</h3>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">Create your first timer to start tracking your time and boost your productivity!</p>
      <%= link_to new_timer_path, class: "inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-sm hover:bg-blue-700 hover:shadow-md transition-all duration-150" do %>
        <%= icon_with_text :plus, "Create First Timer", icon: { size: 4 } %>
      <% end %>
    </div>
  <% end %>
</div>
