<% content_for :page_title, "All Timers" %>
<% content_for :page_description, "Manage and track your time entries" %>

<!-- Header actions -->
<div class="mb-8 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Your Timers</h2>
      <p class="mt-1 text-gray-600">You have <%= @timers.count %> <%= 'timer'.pluralize(@timers.count) %> in total</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to new_timer_path, class: "btn-primary" do %>
        <%= icon_with_text :plus, "New Timer", icon: { size: 4 } %>
      <% end %>
    </div>
  </div>
</div>

<!-- Active timers section -->
<% if @active_timers.any? %>
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-semibold text-gray-900 flex items-center">
        <%= icon :play, size: 6, class: "text-green-600 mr-2" %>
        Active Timers
      </h3>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
        <%= @active_timers.count %> <%= 'timer'.pluralize(@active_timers.count) %>
      </span>
    </div>
    <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
      <% @active_timers.each do |timer| %>
        <%= render 'timer_card', timer: timer %>
      <% end %>
    </div>
  </div>
<% end %>

<!-- All timers list -->
<div class="bg-white rounded-xl shadow-sm border border-gray-100">
  <div class="px-6 py-4 border-b border-gray-100">
    <h3 class="text-xl font-semibold text-gray-900">All Timers</h3>
  </div>
  
  <% if @timers.any? %>
    <div class="divide-y divide-gray-200">
      <% @timers.each do |timer| %>
        <%= render 'timer_list_item', timer: timer %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-gray-50 to-gray-100 rounded-full mb-6">
        <%= icon :clock, size: 12, class: "text-gray-400" %>
      </div>
      <h3 class="text-2xl font-semibold text-gray-900 mb-3">No timers yet</h3>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">Create your first timer to start tracking your time and boost your productivity!</p>
      <%= link_to new_timer_path, class: "inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-sm hover:bg-blue-700 hover:shadow-md transition-all duration-150" do %>
        <%= icon_with_text :plus, "Create First Timer", icon: { size: 4 } %>
      <% end %>
    </div>
  <% end %>
</div>
