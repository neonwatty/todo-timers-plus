<%= turbo_stream.replace dom_id(@timer) do %>
  <%= render 'timer_card', timer: @timer %>
<% end %>

<%= turbo_stream.replace dom_id(@timer, :list) do %>
  <%= render 'timer_list_item', timer: @timer %>
<% end %>

<% # Refresh the active timers section %>
<% @active_timers = Current.user.timers.active %>
<%= turbo_stream.replace "active_timers_section" do %>
  <%= render 'active_timers_section', active_timers: @active_timers %>
<% end %>